@page
@* @using Microsoft.Extensions.Configuration *@
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration;
@model AccountDeletionModel
@{
    ViewData["Title"] = "Account Deletion";
}

@{ var supportEmailAddress = Configuration["SystemContactDetails:SupportEmailAddress"]; }


<header>
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <p class="text-danger">This account has been marked for deletion, please <a href="mailto:@supportEmailAddress">contact us</a> if you wish to cancel the deletion.</p>
</header>