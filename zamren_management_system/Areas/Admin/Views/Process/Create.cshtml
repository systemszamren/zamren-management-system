@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Create Workflow Process";
    Layout = "_Layout";
}

<nav style="--bs-breadcrumb-divider: '>'; float: right" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Process" asp-action="Index">Processes</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<h1>CREATE WORKFLOW PROCESS</h1>
<hr>

<div class="row">
    <div class="col-md-6">
        <h4>Create Workflow Process</h4>
        <form id="create-process-form" class="mt-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="e.g PURCHASE REQUISITION">
                <label for="name">Process Name</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter description of process"></textarea>
                <label for="description">Process Description</label>
            </div>
            <div class="form-group mb-3">
                <label for="moduleId" class="control-label">Select Module</label><br>
                <select class="form-control moduleId-select2" id="moduleId" name="moduleId">
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/workflow/process/create.process.js"></script>
    <script src="~/js/workflow/process/get.modules.select2.js"></script>
}