@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Create New Office";
    Layout = "_Layout";
}

<nav style="--bs-breadcrumb-divider: '>'; float: right" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Office" asp-action="Index">Offices</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<h1>CREATE OFFICE</h1>
<hr>

<div class="row">
    <div class="col-md-6">
        <h4>Create Office</h4>
        <form id="create-office-form" class="mt-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="e.g ZAMREN">
                <label for="name">Office Name</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" maxlength="255" id="description" name="description" rows="3" placeholder="Enter office description"></textarea>
                <label for="description">Office Description</label>
            </div>
            <div class="form-group mb-3">
                <label for="departmentId" class="control-label">Select Department</label><br>
                <select class="form-control departmentId-select2" id="departmentId" name="departmentId">
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/security/office/create.office.js"></script>
    <script src="~/js/security/office/get.departments.select2.js"></script>
}