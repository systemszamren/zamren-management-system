@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Edit Office";
    Layout = "_Layout";
}

<nav style="--bs-breadcrumb-divider: '>'; float: right" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Office" asp-action="Index">Offices</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<h1>EDIT OFFICE</h1>
<hr>

<div class="row">
    <div class="col-md-6">

        <form id="edit-office-form" class="mt-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter office name">
                <label for="name">Office Name</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" maxlength="255" id="description" name="description" rows="3" placeholder="Enter office description" style="height: 100px"></textarea>
                <label for="description">Office Description</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="currentDepartmentName" name="currentDepartmentName" readonly="readonly">
                <label for="currentDepartmentName">Current Department</label>
            </div>
            <div class="form-group mb-3">
                <label for="departmentId" class="control-label">Change Department</label><br>
                <select class="form-control departmentId-select2" id="departmentId" name="departmentId">
                </select>
            </div>
            <input type="hidden" id="id" name="id"/>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>

    </div>
</div>

<br>
<br>

<h4>OFFICE USERS</h4>
<table id="office-users-table" class="ui celled table nowrap table-hover table-striped display" style="width:100%">
    <thead>
    <tr>
        <th>No.</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>StartDate</th>
        <th>EndDate</th>
    </tr>
    </thead>
    <tfoot>
    <tr>
        <th>No.</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>StartDate</th>
        <th>EndDate</th>
    </tr>
    </tfoot>
</table>

@section Scripts {
    <script src="~/js/security/office/get.office.data.js"></script>
    <script src="~/js/security/office/get.users.in.office.dt.js"></script>
    <script src="~/js/security/office/edit.office.js"></script>
}