@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Edit Department";
    Layout = "_Layout";
}

<nav style="--bs-breadcrumb-divider: '>'; float: right" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Department" asp-action="Index">Departments</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<h1>EDIT DEPARTMENT</h1>
<hr>

<div class="row">
    <div class="col-md-6">

        <form id="edit-department-form" class="mt-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter department name">
                <label for="name">Department Name</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter department description"></textarea>
                <label for="description">Department Description</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="currentBranchName" name="currentBranchName" readonly="readonly">
                <label for="currentBranchName">Current Branch</label>
            </div>
            <div class="form-group mb-3">
                <label for="branchId" class="control-label">Change Branch</label><br>
                <select class="form-control branchId-select2" id="branchId" name="branchId">
                </select>
            </div>
            <input type="hidden" id="id" name="id"/>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>

    </div>
</div>


<br>
<br>

<h4>MANAGE OFFICES</h4>
<table id="department-offices-table" class="ui celled table nowrap table-hover table-striped display" style="width:100%">
    <thead>
    <tr>
        <th>No.</th>
        <th>Office</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    </thead>
    <tfoot>
    <tr>
        <th>No.</th>
        <th>Office</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    </tfoot>
</table>

@section Scripts {
    <script src="~/js/security/department/get.department.data.js"></script>
    <script src="~/js/security/department/get.offices.in.department.dt.js"></script>
    <script src="~/js/security/department/edit.department.js"></script>
}