@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Create New Department";
    Layout = "_Layout";
}

<nav style="--bs-breadcrumb-divider: '>'; float: right" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Department" asp-action="Index">Departments</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<h1>CREATE DEPARTMENT</h1>
<hr>

<div class="row">
    <div class="col-md-6">
        <h4>Create Department</h4>
        <form id="create-department-form" class="mt-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="e.g ZAMREN">
                <label for="name">Department Name</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter department description"></textarea>
                <label for="description">Department Description</label>
            </div>
            <div class="form-group mb-3">
                <label for="branchId" class="control-label">Select Branch</label><br>
                <select class="form-control branchId-select2" id="branchId" name="branchId">
                </select>
            </div>  
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/security/department/create.department.js"></script>
    <script src="~/js/security/department/get.branches.select2.js"></script>
}