@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Create New Branch";
    Layout = "_Layout";
}

<nav style="--bs-breadcrumb-divider: '>'; float: right" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Branch" asp-action="Index">Branches</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<h1>CREATE BRANCH</h1>
<hr>

<div class="row">
    <div class="col-md-6">
        <h4>Create Branch</h4>
        <form id="create-branch-form" class="mt-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="e.g ZAMREN">
                <label for="name">Branch Name</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter branch description"></textarea>
                <label for="description">Branch Description</label>
            </div>
            <div class="form-group mb-3">
                <label for="organizationId" class="control-label">Select Organization</label><br>
                <select class="form-control organizationId-select2" id="organizationId" name="organizationId">
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/security/branch/create.branch.js"></script>
    <script src="~/js/security/branch/get.organizations.select2.js"></script>
}