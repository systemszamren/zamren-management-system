@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewBag.Title = "Users";
    Layout = "_Layout";
}

<nav style="--bs-breadcrumb-divider: '>'; float: right" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="User" asp-action="Index">Users</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">New User</li>
    </ol>
</nav>

<h1>Create New User</h1>
<hr>

<div class="row">
    <div class="col-md-4">

        <form id="register-new-user-form">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name">
                <label for="firstName">First Name<span class="text-danger">*</span></label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name">
                <label for="lastName">Last Name<span class="text-danger">*</span></label>
            </div>
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                <label for="email">Email<span class="text-danger">*</span></label>
            </div>

            <div class="form-group mb-3">
                <input type="checkbox" id="isEmployee" name="isEmployee" value="true">
                <label for="isEmployee">Is Employee</label>
            </div>

            <div class="form-group mb-3 hide employeesSelect">
                <label for="supervisorUserId" class="">Select Immediate Supervisor (If Any)</label><br>
                <select class="form-control employeesUserId-select2" id="supervisorUserId" name="supervisorUserId">
                </select>
            </div>

            <div class="mb-3 form-check hide canActionWkfTaskCheckbox">
                <input type="checkbox" class="form-check-input" id="canActionWkfTask" name="canActionWkfTask" value="true">
                <label class="form-check-label" for="canActionWkfTask">Can Perform Workflow Tasks</label>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="User" asp-action="Index" class="btn btn-dark">Cancel</a>
        </form>

    </div>
</div>

@section Scripts {
    <script src="~/js/security/user/get.employees.select2.js"></script>
    <script src="~/js/security/user/create.user.js"></script>
}