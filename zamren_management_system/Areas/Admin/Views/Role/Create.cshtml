@using Microsoft.AspNetCore.Mvc.TagHelpers
@model zamren_management_system.Areas.Security.ViewModels.CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
    Layout = "_Layout";
}

<nav style="--bs-breadcrumb-divider: '>'; float: right" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Role" asp-action="Index">Roles</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6">
        <h1>Create New Role</h1>
        <form id="create-role-form" class="mt-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="Name">
                <label for="name">Name</label>
            </div>
            <div class="form-floating">
                <textarea class="form-control" maxlength="255" id="description" name="description" placeholder="Description"></textarea>
                <label for="description">Description</label>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary" style="width:auto">
                        Create Role
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/security/role/create.role.js"></script>
}