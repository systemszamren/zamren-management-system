@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Create New Privilege";
    Layout = "_Layout";
}

<nav style="--bs-breadcrumb-divider: '>'; float: right" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Privilege" asp-action="Index">Privileges</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6">
        <h1>Create New Privilege</h1>
        <form id="create-privilege-form" class="mt-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="e.g SEC_CREATE_RECORD">
                <label for="name">Privilege Name</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" maxlength="255" id="description" name="description" rows="3" placeholder="Enter privilege description"></textarea>
                <label for="description">Privilege Description</label>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/security/privilege/create.privilege.js"></script>
}