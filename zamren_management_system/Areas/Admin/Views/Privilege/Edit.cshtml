@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Edit Privilege";
    Layout = "_Layout";
}

<nav style="--bs-breadcrumb-divider: '>'; float: right" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Privilege" asp-action="Index">Privileges</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<h1>EDIT PRIVILEGE</h1>
<hr>

<div class="row">
    <div class="col-md-6">
        <form id="edit-privilege-form" class="mt-3">
            <div class="form-group">
                <label for="name">Privilege Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter privilege name">
            </div>
            <br>
            <div class="form-group">
                <label for="description">Privilege Description</label>
                <textarea class="form-control" maxlength="255" id="description" name="description" rows="3" placeholder="Enter privilege description"></textarea>
            </div>
            <br>
            <input type="hidden" id="id" name="id"/>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>


<br>
<br>

@section Scripts {
    <script src="~/js/security/privilege/get.privilege.details.js"></script>
    <script src="~/js/security/privilege/edit.privilege.js"></script>
}